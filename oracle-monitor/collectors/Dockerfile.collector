FROM python:3.11-slim

WORKDIR /app

# Copy requirements
COPY collectors/requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy collector code
COPY collectors/ ./collectors/
COPY schema/ ./schema/

# Set Python path
ENV PYTHONPATH=/app

# Default command (will be overridden by deployment)
CMD ["python", "-m", "collectors.k8s_collector.main"]
