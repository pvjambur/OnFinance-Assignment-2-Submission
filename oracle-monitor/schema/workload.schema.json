{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Workload State",
    "type": "object",
    "required": [
        "deployment_name",
        "pods"
    ],
    "properties": {
        "deployment_name": {
            "type": "string"
        },
        "pods": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "pod_id",
                    "status"
                ],
                "properties": {
                    "pod_id": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "memory": {
                        "type": "number",
                        "description": "Memory usage in MB"
                    },
                    "cpu": {
                        "type": "number",
                        "description": "CPU usage in millicores"
                    },
                    "restarts": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}